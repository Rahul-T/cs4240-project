main let
        type ArrayInt = array [100] of int; /*Declare ArrayInt as a new type */
        var X, Y : ArrayInt := 10; /* Declare vars X and Y as arrays with initialization */
        var i, sum : int := 0;
in
begin
        for i := 0 to 99 do
                while i < 100 do
                                sum := sum + X[i] * Y [i];
                        enddo;
        enddo;

        for i := 0 to 99 do
                for i := 0 to 99 do
                                sum := sum + X[i] * Y [i];
                enddo;
        enddo;
end